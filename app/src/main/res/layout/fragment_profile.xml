<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/storeCard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/storeImage"
                android:src="@drawable/store_placeholder"
                android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bobboi Natural Gelato"
                        android:id="@+id/profileStoreTitle"
                        android:textSize="22.5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profileStoreAddress"
                        android:text="10 Torrey pines road, La Jolla, CA 92127"
                        android:padding="5dp"
                        android:textSize="17.5sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profileStorePhoneNumber"
                        android:text="619-123-4567"
                        android:textSize="17.5sp"
                        android:padding="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>



    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/storeCard"
        android:id="@+id/myCoupons"
        android:text="My Coupons"
        />





</RelativeLayout>